<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pip_Boy_24.ExperienceBar">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Rectangle BackgroundColor="#002F01" Grid.ColumnSpan="2" />
        <Image Source="scan_effect.png" Aspect="Fill" Opacity="0.5" Grid.ColumnSpan="2" />
        <Label Text="LEVEL 1 " TextColor="Lime" FontAutoScalingEnabled="True" FontSize="24" FontAttributes="Bold" FontFamily="Monofonto" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" TextType="Text" CharacterSpacing="0.5" Padding="10,0,0,0" />
        <Border StrokeThickness="2" HeightRequest="20" Stroke="Lime" Grid.Column="1" Margin="5,0,10,0" BackgroundColor="Transparent">
            <Rectangle BackgroundColor="Lime" WidthRequest="1" HorizontalOptions="Start" />
        </Border>
    </Grid>
</ContentView>
