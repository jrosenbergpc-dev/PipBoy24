        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <pipboy:HealthBar Margin="0,0,10,0" />
        <pipboy:ExperienceBar Grid.Column="1" />
        <pipboy:APBar Grid.Column="2" Margin="10,0,0,0" />
    </Grid>
</ContentView>
